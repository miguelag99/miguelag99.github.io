---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

import { subjects, theses } from '../content/teaching';

---

<style>
  .link :global(a) {
    color: #4f46e5; /* Indigo-600 color */
    text-decoration: none;
  }
  .link :global(a:hover) {
    color: #4338ca; /* Slightly darker on hover */
    text-decoration: none; /* Ensures no underline on hover */
  }
</style>

<BaseLayout title="Teaching" sideBarActiveItemID="teaching">
  <div class="pb-12 mt-5">
    <div class="text-5xl font-bold mb-8">Teaching Experience</div>

    <!-- Teaching Philosophy -->
    <!-- <div class="bg-base-200 rounded-xl p-6 mb-8 shadow-lg">
      <h2 class="text-2xl font-bold mb-4">Teaching Philosophy</h2>
      <p class="text-lg">
        As an educator in the field of AI and Computer Vision, I believe in combining theoretical foundations with hands-on practical experience. My teaching approach emphasizes real-world applications, interactive learning, and fostering critical thinking skills in students.
      </p>
    </div> -->

    <!-- Academic Subjects -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold mb-6">Academic Subjects</h2>
      {subjects.map((subject) => (
        <div class="bg-base-200 rounded-xl p-6 mb-6 shadow-lg">
          <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
            <div>
              <h3 class="text-2xl font-bold">{subject.name}</h3>
              <p class="text-sm text-base-content/70">
                {subject.role}{subject.coprofessor && ` joinlty with `} <span class="link" set:html={subject.coprofessor} /> | 
                {subject.institution} | {subject.period}
              </p>
            </div>
            <span class="badge badge-accent mt-2 md:mt-0">{subject.level}</span>
          </div>
          
          <p class="mb-4 text-base-content/80">{subject.description}</p>
          
          <div class="border-l-2 border-accent pl-4">
            <h4 class="font-semibold mb-2">Main Topics:</h4>
            <ul class="list-disc list-inside space-y-1">
              {subject.topics.map((topic) => (
                <li class="text-base-content/70">{topic}</li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>

    <!-- Thesis Supervision -->
    <div>
      <h2 class="text-3xl font-bold mb-6">Thesis Supervision</h2>
      
      <!-- Bachelor's Theses -->
      <div class="bg-base-200 rounded-xl p-6 mb-6 shadow-lg">
        <h3 class="text-2xl font-bold mb-6">Bachelor's Thesis</h3>
        <div class="space-y-6">
          {theses.bachelor.map((thesis) => (
            <div class="border-b border-base-300 last:border-b-0 pb-6">
              <div class="flex flex-col md:flex-row md:items-start justify-between mb-4">
                <div>
                  <h4 class="text-xl font-bold">{thesis.title}</h4>
                  <p class="text-sm text-base-content/70">
                    {thesis.student} | {thesis.period}
                    {thesis.codirector && ` | Jointly with `}
                    <span set:html={thesis.codirector} />
                  </p>
                </div>
                <span class={`badge ${thesis.status === "Completed" ? "badge-success" : "badge-info"} mt-2 md:mt-0`}>
                  {thesis.status}
                </span>
              </div>
              
              <p class="mb-4 text-base-content/80">{thesis.description}</p>
              
              <div class="border-l-2 border-accent pl-4">
                <h5 class="font-semibold mb-2">Key Topics:</h5>
                <ul class="list-disc list-inside space-y-1">
                  {thesis.topics.map((topic) => (
                    <li class="text-base-content/70">{topic}</li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Master's Theses -->
      <div class="bg-base-200 rounded-xl p-6 shadow-lg">
        <h3 class="text-2xl font-bold mb-6">Master's Thesis</h3>
        <div class="space-y-6">
          {theses.master.map((thesis) => (
            <div class="border-b border-base-300 last:border-b-0 pb-6">
              <div class="flex flex-col md:flex-row md:items-start justify-between mb-4">
                <div>
                  <h4 class="text-xl font-bold">{thesis.title}</h4>
                  <p class="text-sm text-base-content/70">
                    {thesis.student} | {thesis.period}
                    {thesis.codirector && ` | Jointly with `}
                    <span set:html={thesis.codirector} />
                  </p>
                </div>
                <span class={`badge ${thesis.status === "Completed" ? "badge-success" : "badge-info"} mt-2 md:mt-0`}>
                  {thesis.status}
                </span>
              </div>
              
              <p class="mb-4 text-base-content/80">{thesis.description}</p>
              
              <div class="border-l-2 border-accent pl-4">
                <h5 class="font-semibold mb-2">Key Topics:</h5>
                <ul class="list-disc list-inside space-y-1">
                  {thesis.topics.map((topic) => (
                    <li class="text-base-content/70">{topic}</li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </div>
      
    </div>


  </div>
</BaseLayout>